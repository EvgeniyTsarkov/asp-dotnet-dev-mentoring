@using NorthwindWebsite.Business.Models

@model ProductsListDto

@{
    ViewData["Title"] = "Products";
}

<link rel="stylesheet" href="~/css/products.css" />

<div>
    <div>
        <h1>Products</h1>
    </div>

    <div>
        <table class="styled-table">
            <tr>
                <th>Product</th>
                <th>Supplier</th>
                <th>Category</th>
                <th class="num-value-cell">Q-ty/unit</th>
                <th class="num-value-cell">Price</th>
                <th class="num-value-cell">Stock</th>
                <th class="num-value-cell">Units/order</th>
                <th class="num-value-cell">Reorder lvl</th>
                <th class="num-value-cell">Discontinued</th>
            </tr>

            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Supplier.CompanyName</td>
                    <td>@product.Category.CategoryName</td>
                    <td class="num-value-cell">@product.QuantityPerUnit</td>
                    <td class="num-value-cell">@product.UnitPrice!.Value.ToString("F2")</td>
                    <td class="num-value-cell">@product.UnitsInStock</td>
                    <td class="num-value-cell">@product.UnitsOnOrder</td>
                    <td class="num-value-cell">@product.ReorderLevel</td>
                    <td class="num-value-cell">@(product.Discontinued ? "Yes" : "No")</td>
                </tr>
            }
        </table>
    </div>
</div>
