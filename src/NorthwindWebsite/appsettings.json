{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Server=(localdb)\\mssqllocaldb; Database=Northwind; Trusted_Connection=True;"
  },
  "MaximumProductsOnPage": 0,
  "Localization": {
    "Default": "en-US"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "ActionsLoggingEnabled": false,
    "WriteTo": [
      {
        "Name": "File",
        "Path": ".\\Logs\\log-{0}.txt",
        "Args": {
          "OutputTemplate": "{Timestamp} {Message}{NewLine:1}{Exception:1}"
        }
      }
    ]
  },
  "FileUploadOptions": {
    "ImageFileFormats": [
      "jpg",
      "jpeg",
      "bmp",
      "png"
    ],
    "ImageMaxSize": 200000
  },
  "CachingConfigs": {
    "CachingFolder": ".\\ImageCache\\",
    "CacheSize": 8,
    "CachingPeriod": 120
  },
  "EmailSenderConfigs": {
    "SendersEmail": "evg.tsarkov@gmail.com",
    "SendersName": "Northwind Training App"
  },
  "AzureAd": {
