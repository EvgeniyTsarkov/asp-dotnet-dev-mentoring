{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Server=(localdb)\\mssqllocaldb; Database=Northwind; Trusted_Connection=True;"
  },
  "MaximumProductsOnPage": 0,
  "Localization": {
    "Default": "en-US"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Path": ".\\Logs\\log-{0}.txt",
        "Args": {
          "OutputTemplate": "{Timestamp} {Message}{NewLine:1}{Exception:1}"
        }
      }
    ]
  },
  "FileUploadOptions": {
    "CategoryPictureFileFormats": "jpg, jpeg, bmp, png",
    "CategoryPicturesMaxSize": "2000000"
  }
}
